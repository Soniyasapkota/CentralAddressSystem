<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CentralAddressSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CentralAddressSystem.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f4f6fc;
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 220px;
            background-color: #0e63f5;
            color: white;
            padding-top: 30px;
            border-radius: 0;
            z-index: 1000;
        }

        .sidebar .nav-link {
            color: white;
            font-weight: 500;
            margin-bottom: 10px;
            border-radius: 10px;
        }

        .sidebar .nav-link.active,
        .sidebar .nav-link:hover {
            background-color: white;
            color: #0e63f5 !important;
        }

        .content {
            margin-left: 230px;
            padding: 40px;
        }

        .card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            padding: 20px;
        }

        .table th,
        .table td {
            vertical-align: middle;
        }

        .status-badge {
            padding: 5px 12px;
            border-radius: 30px;
            font-size: 0.85rem;
        }

        .status-pending {
            background-color: #ffe5b4;
            color: #b8860b;
        }

        .status-dispatch {
            background-color: #c8f7c5;
            color: #2e8b57;
        }

        .status-completed {
            background-color: #dcdcdc;
            color: #333;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CentralAddressSystem</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Auth">
                                <span class="btn btn-outline-primary">Register</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="sidebar d-flex flex-column">
        <h4 class="px-3 mb-4">Dashboard</h4>
        <ul class="nav flex-column px-3">
            <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Dashboard"><i class="fas fa-home me-2"></i>Dashboard</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Country" asp-action="Index"><i class="fas fa-map me-2"></i>Manage Country</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Province" asp-action="Index"><i class="fas fa-map me-2"></i>Manage Province</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="District" asp-action="Index"><i class="fas fa-city me-2"></i>Manage District</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="LocalBody" asp-action="Index"><i class="fas fa-building me-2"></i>Manage LocalBody</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Customer" asp-action="Index"><i class="fas fa-users me-2"></i>Customer Details</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index"><i class="fas fa-home me-2"></i>Go to Home</a></li>
        </ul>
        <div class="mt-auto px-3">
            <a href="#" class="text-white me-2">Facebook</a>
            <a href="#" class="text-white me-2">Twitter</a>
            <a href="#" class="text-white">Google</a>
        </div>
    </div>

    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="content">
            &copy; 2025 - CentralAddressSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required:false)
</body>
</html>
