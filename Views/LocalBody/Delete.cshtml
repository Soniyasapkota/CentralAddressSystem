@model CentralAddressSystem.ViewModels.LocalBodyViewModel

@{
    ViewData["Title"] = "Delete Local Body";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete Local Body</h1>
<h3>Are you sure you want to delete this local body?</h3>
<hr />

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<div>
    <h4>Local Body Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Local Body ID</dt>
        <dd class="col-sm-10">@Model.LocalBodyID</dd>
        <dt class="col-sm-2">Local Body Name</dt>
        <dd class="col-sm-10">@Model.LocalBodyName</dd>
        <dt class="col-sm-2">District</dt>
        <dd class="col-sm-10">@Model.DistrictName</dd>
        <dt class="col-sm-2">Province</dt>
        <dd class="col-sm-10">@Model.ProvinceName</dd
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="LocalBodyID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}