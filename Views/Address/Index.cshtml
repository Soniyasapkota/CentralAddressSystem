@model IEnumerable<CentralAddressSystem.ViewModels.AddressViewModel>

@{
    ViewData["Title"] = "Manage Addresses";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Manage Addresses</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Address</a>
</p>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>Street</th>
            <th>Country</th>
            <th>Province</th>
            <th>District</th>
            <th>Local Body</th>
            <th>User</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var address in Model)
            {
                <tr>
                    <td>@address.Street</td>
                    <td>@address.CountryName</td>
                    <td>@address.ProvinceName</td>
                    <td>@address.DistrictName</td>
                    <td>@address.LocalBodyName</td>
                    <td>@address.UserName</td>
                    <td>@address.CreatedAt.ToString("dd MMM yyyy")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@address.AddressID" class="btn btn-outline-primary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@address.AddressID" class="btn btn-outline-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8">No addresses found.</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}