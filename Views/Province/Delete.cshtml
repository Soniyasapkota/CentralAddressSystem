@model CentralAddressSystem.ViewModels.ProvinceViewModel

@{
    ViewData["Title"] = "Delete Province";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete Province</h1>
<h3>Are you sure you want to delete this province?</h3>
<hr />

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<div>
    <h4>Province Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Province ID</dt>
        <dd class="col-sm-10">@Model.ProvinceID</dd>
        <dt class="col-sm-2">Province Code</dt>
        <dd class="col-sm-10">@Model.ProvinceCode</dd>
        <dt class="col-sm-2">Province Name</dt>
        <dd class="col-sm-10">@Model.ProvinceName</dd>
        <dt class="col-sm-2">No. of Districts</dt>
        <dd class="col-sm-10">@Model.Noofdistricts</dd>
        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.CountryName</dd>
        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("dd MMM yyyy")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProvinceID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}