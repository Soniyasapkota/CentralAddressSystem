@model IEnumerable<CentralAddressSystem.ViewModels.ProvinceViewModel>

@{
    ViewData["Title"] = "Manage Provinces";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Manage Provinces</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Province</a>
</p>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>Province ID</th>
            <th>Province Code</th>
            <th>Province Name</th>
            <th>No. of Districts</th>
            <th>Country</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var province in Model)
            {
                <tr>
                    <td>@province.ProvinceID</td>
                    <td>@province.ProvinceCode</td>
                    <td>@province.ProvinceName</td>
                    <td>@province.Noofdistricts</td>
                    <td>@province.CountryName</td>
                    <td>@province.CreatedAt.ToString("dd MMM yyyy")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@province.ProvinceID" class="btn btn-outline-primary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@province.ProvinceID" class="btn btn-outline-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">No provinces found.</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}