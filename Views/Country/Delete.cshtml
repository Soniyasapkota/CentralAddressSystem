@model CentralAddressSystem.Models.Country

@{
    ViewData["Title"] = "Delete Country";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete Country</h1>
<h3>Are you sure you want to delete this country?</h3>
<hr />

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<div>
    <h4>Country Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Country ID</dt>
        <dd class="col-sm-10">@Model.CountryID</dd>
        <dt class="col-sm-2">Country Name</dt>
        <dd class="col-sm-10">@Model.CountryName</dd>
        <dt class="col-sm-2">Country Code</dt>
        <dd class="col-sm-10">@Model.CountryCode</dd>
        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("dd MMM yyyy")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CountryID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}