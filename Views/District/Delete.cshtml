@model CentralAddressSystem.Models.District

@{
    ViewData["Title"] = "Delete District";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete District</h1>
<h3>Are you sure you want to delete this district?</h3>
<hr />

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<div>
    <h4>District Details</h4>
    <dl class="row">
        <dt class="col-sm-2">District ID</dt>
        <dd class="col-sm-10">@Model.DistrictID</dd>
        <dt class="col-sm-2">District Name</dt>
        <dd class="col-sm-10">@Model.DistrictName</dd>
        <dt class="col-sm-2">Province</dt>
        <dd class="col-sm-10">@Model.Province?.ProvinceName</dd>
        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.Province?.Country?.CountryName</dd>
        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("dd MMM yyyy")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="DistrictID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}