@model IEnumerable<CentralAddressSystem.ViewModels.DistrictViewModel>

@{
    ViewData["Title"] = "Manage Districts";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Manage Districts</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New District</a>
</p>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>District ID</th>
            <th>District Name</th>
            <th>Province</th>
            <th>Country</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var district in Model)
            {
                <tr>
                    <td>@district.DistrictID</td>
                    <td>@district.DistrictName</td>
                    <td>@district.ProvinceName</td>
                    <td>@district.CountryName</td>
                    <td>@district.CreatedAt.ToString("dd MMM yyyy")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@district.DistrictID" class="btn btn-outline-primary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@district.DistrictID" class="btn btn-outline-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">No districts found.</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}