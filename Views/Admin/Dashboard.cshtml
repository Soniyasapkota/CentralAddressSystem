@model IEnumerable<CentralAddressSystem.Models.Province>
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Admin Dashboard</h1>
<p>Welcome, @ViewData["UserName"] (@ViewData["UserEmail"])</p>
<p>This is the admin dashboard for managing the Central Address System.</p>

<div class="mb-3">
    <a asp-controller="Country" asp-action="Index" class="btn btn-primary">Manage Countries</a>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Province ID</th>
                    <th>Province Code</th>
                    <th>Province Name</th>
                    <th>No. of Districts</th>
                    <th>Country</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var province in Model)
                    {
                        <tr>
                            <td>@province.ProvinceID</td>
                            <td>@province.ProvinceCode</td>
                            <td>@province.ProvinceName</td>
                            <td>@province.Noofdistricts</td>
                            <td>@province.Country?.CountryName</td>
                            <td>@province.CreatedAt.ToString("dd MMM yyyy")</td>
                            <td>
                                <a asp-action="Edit" asp-controller="Province" asp-route-id="@province.ProvinceID" class="btn btn-outline-primary btn-sm">Edit</a>
                                <a asp-action="Delete" asp-controller="Province" asp-route-id="@province.ProvinceID" class="btn btn-outline-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7">No provinces found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
